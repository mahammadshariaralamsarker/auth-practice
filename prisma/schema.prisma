generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @unique @default(uuid())
  email          String   @unique
  hashedPassword String
  name           String
  phoneNumber    String
  bio            String
  location       String
  picture        String
  website        String
  verify         Boolean  @default(false)
  offerSkills    String[]
  wantSkills     String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String
  code      Int
  createdAt DateTime @default(now())
  password  String

  @@unique([email, code])
}

model Otp2 {
  id        String   @id @unique @default(uuid())
  email     String
  code      Int
  createdAt DateTime @default(now())

  @@unique([email, code])
}
model UpdateUser {
  id            String   @id @default(uuid())
  email         String   @unique
  hashedPassword String
  name          String?
  phoneNumber   String?
  bio           String?
  location      String?
  offerSkills   String[]
  wantSkills    String[]
  website       String?
  picture       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
}
